{
  "info": {
    "name": "Petstore API Smoke Tests",
    "description": "Smoke tests for deployed Petstore API via Gravitee Gateway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "GATEWAY_URL",
      "value": "http://localhost:8082"
    }
  ],
  "item": [
    {
      "name": "Petstore API",
      "item": [
        {
          "name": "Find Pets by Status",
          "request": {
            "method": "GET",
            "url": "{{GATEWAY_URL}}/petstore-gitops/v3/pet/findByStatus?status=available"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response time < 3s', () => {",
                  "    pm.expect(pm.response.responseTime).to.be.below(3000);",
                  "});",
                  "",
                  "pm.test('Response is JSON array', () => {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Pets have required fields', () => {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.length > 0) {",
                  "        pm.expect(jsonData[0]).to.have.property('id');",
                  "        pm.expect(jsonData[0]).to.have.property('name');",
                  "    }",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Pet by ID",
          "request": {
            "method": "GET",
            "url": "{{GATEWAY_URL}}/petstore-gitops/v3/pet/1"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200 or 404', () => {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
                  "});",
                  "",
                  "pm.test('Response time < 2s', () => {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Store Inventory",
          "request": {
            "method": "GET",
            "url": "{{GATEWAY_URL}}/petstore-gitops/v3/store/inventory"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is JSON object', () => {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('object');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Test API GKO",
      "item": [
        {
          "name": "HTTPBin Test",
          "request": {
            "method": "GET",
            "url": "{{GATEWAY_URL}}/test-gko"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response time < 3s', () => {",
                  "    pm.expect(pm.response.responseTime).to.be.below(3000);",
                  "});",
                  "",
                  "pm.test('Response contains URL', () => {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('url');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}

